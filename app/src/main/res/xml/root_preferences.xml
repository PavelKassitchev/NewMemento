<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/habit">

        <ListPreference
            app:defaultValue="35"
            app:entries="@array/settings_period_titles"
            app:entryValues="@array/settings_period_values"
            app:key="period"
            app:title="@string/period"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="180"
            app:entries="@array/settings_delay_titles"
            app:entryValues="@array/settings_delay_values"
            app:key="delay"
            app:title="@string/delay"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreference
            app:key="confirm"
            app:title="@string/confirm"
            app:summaryOn="@string/confirm_on"
            app:summaryOff="@string/confirm_off"
            app:switchTextOn="@string/short_confirm_on"
            app:switchTextOff="@string/short_confirm_off"
            app:useSimpleSummaryProvider="true"/>


    </PreferenceCategory>
</PreferenceScreen>